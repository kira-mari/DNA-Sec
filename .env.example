# DNA-Sec Configuration
# Copy to .env and customize

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Security Settings
MAX_FILE_SIZE=10485760          # 10MB in bytes
SCAN_TIMEOUT=30                 # Timeout in seconds
CLEANUP_INTERVAL=300            # Auto-cleanup uploads after 5 minutes

# YARA Configuration (optional)
USE_YARA=true                   # Set to false to use mock scanner
YARA_RULES_PATH=dna_sec/rules/malware_in_dna.yar

# Upload Directory
UPLOAD_FOLDER=web/uploads

# Logging
LOG_LEVEL=INFO
LOG_FILE=dna_sec.log

# Rate Limiting (requests per minute)
RATE_LIMIT_SCAN=10
RATE_LIMIT_GLOBAL=100
